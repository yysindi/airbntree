<div class="container-fluid">
   <div class="row">
    <div class="col-12 col-md-6 main">
      <h1><span class="green-highlight">Discover</span> the perfect <span class="pink-highlight">treehouse</span></h1>
      <h2>A curated list of the coziest spots around the world</h2>
      <a href="/treehouses" class="btn btn-outline-dark">Let's explore <%= icon('fas', 'arrow-right') %></a>
    </div>
    <div class="col-12 col-md-6 top-img">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag "main-treehouse.jpg" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "main-treehouse2.jpg" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "main-treehouse3.jpg" %>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
   </div>
</div>