<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "tree2.png" %> AirB 'n' Tree
    <% end %>

  <% if params[:action] == 'index' %>
      <%= form_tag treehouses_path, method: :get, class: "search-form" do %>
      <%= text_field_tag :query,
    params[:query],
    class: "form-control search-design",
    placeholder: "Location..."
  %>
   <%= button_tag(type: "submit", class: "btn btn-default") do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>

<% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= link_to pluralize(Booking.where(treehouse_id: current_user.treehouses.ids).count, 'offer'), profile_path, class: "btn btn-custom" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Browse Treehouses", treehouses_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://i.pinimg.com/originals/49/e3/fa/49e3faa6f5292f2996d7ef5514210f64.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", profile_path, class: "dropdown-item" %>
            <%= link_to "New Treehouse", new_treehouse_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Browse Treehouses", treehouses_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
